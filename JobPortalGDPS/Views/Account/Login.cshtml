@model JobPortalGDPS.Models.LoginViewModel

<!-- Styling for centering the form -->
<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full height of the viewport */
    }

    .login-box {
        background-color: #f9f9f9;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .login-box label {
        font-weight: bold;
    }

    .login-box input {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .login-box button {
        width: 100%;
        padding: 0.5rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .login-box button:hover {
        background-color: #0056b3;
    }

    .register-link {
        display: block;
        text-align: center;
        margin-top: 1rem;
    }
</style>

<div class="login-container">
    <div class="login-box">
        <form asp-action="Login" method="post">
            <div>
                <label>Email</label>
                <input asp-for="Email" />
            </div>
            <div>
                <label>Password</label>
                <input type="password" asp-for="Password" />
            </div>
            <button type="submit">Login</button>
        </form>

        <!-- Add a button to go to the register page -->
        <div class="register-link">
            <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>
        </div>
    </div>
</div>
